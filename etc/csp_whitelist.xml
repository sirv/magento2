<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp:etc/csp_whitelist.xsd">
    <policies>
        <policy id="connect-src">
            <values>
                <value id="sirv_connect_src" type="host">*.sirv.com</value>
                <value id="vimeo_connect_src" type="host">vimeo.com</value>
            </values>
        </policy>
        <policy id="frame-src">
            <values>
                <value id="vimeo_frame_src" type="host">player.vimeo.com</value>
            </values>
        </policy>
        <policy id="img-src">
            <values>
                <value id="sirv_img_src" type="host">*.sirv.com</value>
                <value id="data_img_src" type="host">data:</value>
                <value id="youtube_img_src" type="host">*.youtube.com</value>
            </values>
        </policy>
        <policy id="media-src">
            <values>
                <value id="sirv_media_src" type="host">*.sirv.com</value>
            </values>
        </policy>
        <policy id="script-src">
            <values>
                <value id="sirv_script_src" type="host">*.sirv.com</value>
                <value id="vimeo_script_src" type="host">player.vimeo.com</value>
            </values>
        </policy>
        <policy id="style-src">
            <values>
                <value id="sirv_style_src" type="host">*.sirv.com</value>
            </values>
        </policy>
        <policy id="font-src">
            <values>
                <value id="sirv_font_src" type="host">*.sirv.com</value>
            </values>
        </policy>
    </policies>
</csp_whitelist>
