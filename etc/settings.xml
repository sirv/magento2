<settings>
    <notice><![CDATA[Accelerate your website with faster loading images. <a href="https://sirv.com" target="_blank" class="sirv-open-in-new-window">About Sirv CDN</a> | <a href="https://my.sirv.com/#/contact/" target="_blank" class="sirv-open-in-new-window">Get support</a>]]></notice>
    <group id="user">
        <label>Sirv account</label>
        <fields>
            <field>
                <name>account_exists</name>
                <label>I already have a Sirv account</label>
                <type>radios</type>
                <type_class>\Sirv\Magento2\Block\Adminhtml\Settings\Edit\Form\Element\Radios\NewAccount</type_class>
                <options>
                    <option>
                        <label>Yes</label>
                        <value>yes</value>
                    </option>
                    <option>
                        <label>No</label>
                        <value>no</value>
                    </option>
                </options>
                <value>yes</value>
            </field>
            <field>
                <name>email</name>
                <label>Email</label>
                <type>email</type>
                <type_class>\Sirv\Magento2\Block\Adminhtml\Settings\Edit\Form\Element\Email</type_class>
                <placeholder>Sirv account email</placeholder>
                <autocomplete>off</autocomplete>
                <required>true</required>
                <autofocus/>
            </field>
            <field>
                <name>password</name>
                <label>Password</label>
                <type>password</type>
                <type_class>\Sirv\Magento2\Block\Adminhtml\Settings\Edit\Form\Element\Password</type_class>
                <placeholder>Sirv account password</placeholder>
                <autocomplete>new-password</autocomplete>
                <required>true</required>
            </field>
            <field>
                <name>otp_code</name>
                <label>Two-factor authentication</label>
                <type>text</type>
                <type_class>\Sirv\Magento2\Block\Adminhtml\Settings\Edit\Form\Element\OtpCode</type_class>
                <placeholder>6-digit code</placeholder>
                <notice><![CDATA[Enter the code generated by your authenticator app.]]></notice>
                <autocomplete>off</autocomplete>
                <required>true</required>
                <autofocus/>
            </field>
            <field>
                <name>first_and_last_name</name>
                <label>First and last name</label>
                <type>text</type>
                <type_class>\Sirv\Magento2\Block\Adminhtml\Settings\Edit\Form\Element\FirstAndLastName</type_class>
                <value></value>
                <required>true</required>
            </field>
            <field>
                <name>alias</name>
                <label>Account name</label>
                <notice><![CDATA[Choose a name that suits your business. At least 6 characters, may include letters, numbers and hyphens.]]></notice>
                <type>text</type>
                <type_class>\Sirv\Magento2\Block\Adminhtml\Settings\Edit\Form\Element\Text</type_class>
                <placeholder>Choose a name</placeholder>
                <value></value>
                <required>true</required>
            </field>
            <field>
                <name>account</name>
                <label>Account</label>
                <notice><![CDATA[Users with role Primary Owner, Owner or Admin can connect.]]></notice>
                <type>select</type>
                <type_class>\Sirv\Magento2\Block\Adminhtml\Settings\Edit\Form\Element\Select</type_class>
                <options></options>
                <value></value>
                <placeholder>Select Sirv account</placeholder>
                <required>true</required>
            </field>
            <field>
                <name>connect</name>
                <label></label>
                <type>button</type>
                <type_class>\Sirv\Magento2\Block\Adminhtml\Settings\Edit\Form\Element\Button</type_class>
                <value>Connect account</value>
                <title>Connect account</title>
            </field>
            <field>
                <name>register</name>
                <label></label>
                <notice><![CDATA[No credit card needed.<br/>Enjoy free 5GB storage & 20GB transfer for 30 days. Then choose a <a href="https://sirv.com/pricing/" target="_blank" class="sirv-open-in-new-window">free or paid plan</a>.<br/>By signing up, you agree to our <a href="https://sirv.com/terms/" target="_blank" class="sirv-open-in-new-window">Terms of Service</a>.<br/>]]></notice>
                <type>button</type>
                <type_class>\Sirv\Magento2\Block\Adminhtml\Settings\Edit\Form\Element\Button</type_class>
                <value>Get started</value>
                <title>Get started</title>
            </field>
        </fields>
    </group>
    <group id="general">
        <label>CDN settings</label>
        <fields>
            <field>
                <name>enabled</name>
                <label>Enable Sirv</label>
                <tooltip><![CDATA[Enable Sirv to automatically copy your media gallery to Sirv. Files will stay in sync and be optimised and served by Sirv CDN.]]></tooltip>
                <type>radios</type>
                <type_class>\Sirv\Magento2\Block\Adminhtml\Settings\Edit\Form\Element\Radios\Switcher</type_class>
                <options>
                    <option>
                        <label>Yes</label>
                        <value>true</value>
                    </option>
                    <option>
                        <label>No</label>
                        <value>false</value>
                    </option>
                </options>
                <value>false</value>
                <install/>
            </field>
            <field>
                <name>sub_alias</name>
                <label>Domain</label>
                <type>select</type>
                <type_class>\Sirv\Magento2\Block\Adminhtml\Settings\Edit\Form\Element\Select</type_class>
                <options></options>
            </field>
            <field>
                <name>image_folder</name>
                <label>Folder name on Sirv</label>
                <tooltip><![CDATA[Images will be copied here in <a class="sirv-open-in-new-window" target="_blank" href="https://my.sirv.com/#/browse/">your Sirv account</a>. The folder will be automatically created by Sirv.]]></tooltip>
                <type>text</type>
                <type_class>\Sirv\Magento2\Block\Adminhtml\Settings\Edit\Form\Element\Folder</type_class>
                <value>magento</value>
                <install/>
            </field>
            <field>
                <name>auto_fetch</name>
                <label>Files served by Sirv CDN</label>
                <!-- <notice><![CDATA[Sirv will fetch files from this domain:]]></notice> -->
                <tooltip><![CDATA[Sirv CDN can serve your JS, CSS and static theme files too. It minifies JS & CSS and uses multiplexing to accelerate file loading. <a class="sirv-open-in-new-window" target="_blank" href="https://sirv.com/help/articles/magento-cdn-sirv-extension/#how-to-set-up-a-cdn-in-magento-2">Learn more</a>.]]></tooltip>
                <type>radios</type>
                <!-- <type_class>\Sirv\Magento2\Block\Adminhtml\Settings\Edit\Form\Element\Radios</type_class> -->
                <type_class>\Sirv\Magento2\Block\Adminhtml\Settings\Edit\Form\Element\Radios\AutoFetch</type_class>
                <options>
                    <option>
                        <label>Images</label>
                        <value>none</value>
                    </option>
                    <option>
                        <label>Images, JS, CSS &amp; associated files</label>
                        <value>custom</value>
                    </option>
                    <option>
                        <label>Images, JS, CSS &amp; all static files</label>
                        <value>all</value>
                    </option>
                </options>
                <value>none</value>
                <notice><![CDATA[Non-image files will be fetched with <a class="sirv-open-in-new-window" target="_blank" href="https://my.sirv.com/#/account/settings/content-delivery">Auto Fetch</a>. JS & CSS files will be minified. <a class="sirv-open-in-new-window" target="_blank" href="https://sirv.com/help/articles/magento-cdn-sirv-extension/#how-to-set-up-a-cdn-in-magento-2">Learn more</a>.]]></notice>
            </field>
            <!--
            <field>
                <name>url_prefix</name>
                <label></label>
                <notice></notice>
                <type>select</type>
                <type_class>\Sirv\Magento2\Block\Adminhtml\Settings\Edit\Form\Element\Select</type_class>
                <options></options>
                <placeholder></placeholder>
                <can_hide_select/>
            </field>
            -->
            <field>
                <name>excluded_files</name>
                <label>Exclude files/folders</label>
                <before_element_html>Files that should not served by Sirv:</before_element_html>
                <placeholder><![CDATA[e.g.&#xa;/frontend/*.css&#xa;/frontend/Magento/luma/en_US/images/logo.svg&#xa;]]></placeholder>
                <notice><![CDATA[You can enter full URLs and the domain will be stripped.<br/>Use * to specify all files at a certain path.]]></notice>
                <type>textarea</type>
                <type_class>\Sirv\Magento2\Block\Adminhtml\Settings\Edit\Form\Element\Textarea</type_class>
                <value>/captcha*</value>
            </field>
            <field>
                <name>excluded_pages</name>
                <label>Exclude pages</label>
                <before_element_html>Web pages that should not have files served by Sirv:</before_element_html>
                <placeholder><![CDATA[e.g.&#xa;/example/particular-page.html&#xa;/a-whole-section/*&#xa;]]></placeholder>
                <notice><![CDATA[You can enter full URLs and the domain will be stripped.<br/>Use * to specify all pages at a certain path.]]></notice>
                <type>textarea</type>
                <type_class>\Sirv\Magento2\Block\Adminhtml\Settings\Edit\Form\Element\Textarea</type_class>
                <value></value>
            </field>
        </fields>
    </group>
    <group id="display_settings">
        <label>Display settings</label>
        <fields>
            <field>
                <name>lazy_load</name>
                <label>Lazy loading</label>
                <tooltip><![CDATA[Only load images when they enter the viewport and perfectly scale them to fit the container.]]></tooltip>
                <type>radios</type>
                <type_class>\Sirv\Magento2\Block\Adminhtml\Settings\Edit\Form\Element\Radios\LazyLoad</type_class>
                <options>
                    <option>
                        <label>On</label>
                        <value>true</value>
                    </option>
                    <option>
                        <label>Off</label>
                        <value>false</value>
                    </option>
                </options>
                <value>true</value>
            </field>
            <field>
                <name>use_placeholders</name>
                <label>Use placeholders</label>
                <tooltip><![CDATA[Use placeholders for images and galleries.]]></tooltip>
                <type>radios</type>
                <type_class>\Sirv\Magento2\Block\Adminhtml\Settings\Edit\Form\Element\Radios\Switcher</type_class>
                <options>
                    <option>
                        <label>Yes</label>
                        <value>true</value>
                    </option>
                    <option>
                        <label>No</label>
                        <value>false</value>
                    </option>
                </options>
                <value>false</value>
                <install/>
            </field>
            <field>
                <name>excluded_from_lazy_load</name>
                <label>Exclude images</label>
                <before_element_html>Disable scaling and lazy loading on specific images, such as your website logo:</before_element_html>
                <placeholder><![CDATA[e.g.&#xa;/wysiwyg/home/home-main.jpg&#xa;/frontend/Magento/luma/en_US/images/logo.svg&#xa;]]></placeholder>
                <notice><![CDATA[Enter full URLs or use * to specify files with a certain path.<br/>You can also specify the value of any attribute of &lt;img&gt; tag.]]></notice>
                <type>textarea</type>
                <type_class>\Sirv\Magento2\Block\Adminhtml\Settings\Edit\Form\Element\Textarea</type_class>
                <value>/captcha*</value>
                <install/>
            </field>
            <field>
                <name>image_scaling</name>
                <label>Image scaling</label>
                <tooltip><![CDATA[How to scale/crop the image to fit the container.]]></tooltip>
                <type>select</type>
                <type_class>\Sirv\Magento2\Block\Adminhtml\Settings\Edit\Form\Element\Select</type_class>
                <options>
                    <option>
                        <label>Fit into container</label>
                        <value>contain</value>
                    </option>
                    <option>
                        <label>Cover container</label>
                        <value>cover</value>
                    </option>
                    <option>
                        <label>Crop into container</label>
                        <value>crop</value>
                    </option>
                </options>
                <value>contain</value>
            </field>
            <field>
                <name>js_modules</name>
                <label>Sirv JS features</label>
                <tooltip><![CDATA[Improve optimization by serving a smaller JS file, containing only the features you need.]]></tooltip>
                <notice><![CDATA[{{SIZE}}]]></notice>
                <type>checkboxes</type>
                <type_class>\Sirv\Magento2\Block\Adminhtml\Settings\Edit\Form\Element\Checkboxes\JsModules</type_class>
                <options>
                    <option>
                        <label>All</label>
                        <value>all</value>
                    </option>
                    <option>
                        <label>Lazy &amp; responsive images</label>
                        <value>lazyimage</value>
                    </option>
                    <option>
                        <label>Image zoom</label>
                        <value>zoom</value>
                    </option>
                    <option>
                        <label>360 spin</label>
                        <value>spin</value>
                    </option>
                    <option>
                        <label>Hotspots</label>
                        <value>hotspots</value>
                    </option>
                    <option>
                        <label>Video streaming</label>
                        <value>video</value>
                    </option>
                    <option>
                        <label>Gallery</label>
                        <value>gallery</value>
                    </option>
                    <option>
                        <label>3D models</label>
                        <value>model</value>
                    </option>
                </options>
                <value>all,lazyimage,zoom,spin,hotspots,video,gallery,model</value>
                <install/>
            </field>
            <field>
                <name>profile</name>
                <label>Image profile</label>
                <tooltip><![CDATA[Choose one of your <a class="sirv-open-in-new-window" target="_blank" href="https://my.sirv.com/#/profiles/">profiles</a> if you wish to apply some settings to all images (e.g. watermarks, text overlays, effects). <a class="sirv-open-in-new-window" target="_blank" href="https://sirv.com/help/articles/dynamic-imaging/profiles/">Learn more</a>.]]></tooltip>
                <type>select</type>
                <type_class>\Sirv\Magento2\Block\Adminhtml\Settings\Edit\Form\Element\Select</type_class>
                <options>
                    <option>
                        <label>Default</label>
                        <value>Default</value>
                    </option>
                </options>
                <value>Default</value>
                <install/>
            </field>
            <field>
                <name>image_quality</name>
                <label>Image quality</label>
                <tooltip><![CDATA[JPEG image quality. The default JPEG image quality is set on your <a class="sirv-open-in-new-window" target="_blank" href="{{URL}}">Magento Stores Configuration page</a>.]]></tooltip>
                <type>select</type>
                <type_class>\Sirv\Magento2\Block\Adminhtml\Settings\Edit\Form\Element\Select</type_class>
                <options>
                    <option>
                        <label>Default (Magento default)</label>
                        <value>0</value>
                    </option>
                </options>
                <value>0</value>
            </field>
            <field>
                <name>magento_watermark</name>
                <label>Use Magento watermark</label>
                <tooltip><![CDATA[Use the standard Magento <a class="sirv-open-in-new-window" target="_blank" href="{{URL}}">watermark settings</a> or apply advanced watermarks with a <a class="sirv-open-in-new-window" target="_blank" href="https://my.sirv.com/#/profiles/">Sirv profile</a>.]]></tooltip>
                <type>radios</type>
                <type_class>\Sirv\Magento2\Block\Adminhtml\Settings\Edit\Form\Element\Radios\Switcher</type_class>
                <options>
                    <option>
                        <label>Yes</label>
                        <value>true</value>
                    </option>
                    <option>
                        <label>No</label>
                        <value>false</value>
                    </option>
                </options>
                <value>true</value>
                <install/>
            </field>
            <field>
                <name>add_img_width_height</name>
                <label>Add width/height</label>
                <tooltip><![CDATA[Try to add missing width/height attributes to <b>img</b> tags.]]></tooltip>
                <type>radios</type>
                <type_class>\Sirv\Magento2\Block\Adminhtml\Settings\Edit\Form\Element\Radios\Switcher</type_class>
                <options>
                    <option>
                        <label>Yes</label>
                        <value>true</value>
                    </option>
                    <option>
                        <label>No</label>
                        <value>false</value>
                    </option>
                </options>
                <value>false</value>
                <install/>
            </field>
            <field>
                <name>custom_css</name>
                <label>Custom CSS</label>
                <notice><![CDATA[Add styles to fix any rendering conflicts caused by other CSS.]]></notice>
                <type>textarea</type>
                <type_class>\Sirv\Magento2\Block\Adminhtml\Settings\Edit\Form\Element\Textarea</type_class>
                <value></value>
                <placeholder><![CDATA[Example:&#xa;.here-is-a-style img {&#xa;    width: auto !important;&#xa;}]]></placeholder>
            </field>
        </fields>
    </group>
    <group id="sirv_media_viewer">
        <label>Product page media gallery</label>
        <fields>
            <field>
                <field_group_legend>Activation</field_group_legend>
                <field_group_comment>Sirv Media Viewer can show any type of media - image zoom, 360 spin, videos or 3D models. It replaces the existing media gallery on your product pages.</field_group_comment>
                <field_group_separator/>
                <name>product_gallery_view</name>
                <label>Use Sirv Media Viewer as product gallery</label>
                <tooltip><![CDATA[Replace your product media gallery viewer with <a class="sirv-open-in-new-window" target="_blank" href="https://sirv.com/help/articles/sirv-media-viewer/">Sirv Media Viewer</a>.]]></tooltip>
                <type>radios</type>
                <type_class>\Sirv\Magento2\Block\Adminhtml\Settings\Edit\Form\Element\Radios\ProductGalleryView</type_class>
                <options>
                    <option>
                        <label>Yes</label>
                        <value>smv</value>
                    </option>
                    <option>
                        <label>No</label>
                        <value>original</value>
                    </option>
                </options>
                <value>smv</value>
                <install/>
            </field>
            <field>
                <field_group_legend>Content from Sirv</field_group_legend>
                <field_group_comment><![CDATA[Your gallery can contain media from <a target="_blank" class="sirv-open-in-new-window" href="https://my.sirv.com/">your Sirv account</a>. The files should be stored in a folder named after the SKU.]]></field_group_comment>
                <field_group_separator/>
                <name>product_assets_folder</name>
                <label>Product folder names on Sirv</label>
                <tooltip><![CDATA[Folder location of product assets for Sirv Media Viewer. The following placeholders can be used:<br/><b>{product-sku}</b><br/><b>{product-id}</b><br/><b>{product-sku-2-char}</b><br/><b>{product-sku-3-char}</b><br/><b>{attribute:attribute_code}</b><br/><b>{attribute:admin:attribute_code}</b><br/>e.g. products/{product-sku} <a target="_blank" href="https://sirv.com/help/articles/magento-cdn-sirv-extension/#gallery">Learn more</a>.]]></tooltip>
                <notice><![CDATA[Folder structure on Sirv e.g. products/{product-sku}]]></notice>
                <type>text</type>
                <type_class>\Sirv\Magento2\Block\Adminhtml\Settings\Edit\Form\Element\Folder</type_class>
                <value>products/{product-sku}</value>
                <install/>
            </field>
            <field>
                <field_group_legend>Order of content</field_group_legend>
                <field_group_comment><![CDATA[Your gallery can include product images from Magento and/or media that you uploaded directly to <a target="_blank" class="sirv-open-in-new-window" href="https://my.sirv.com/">your Sirv account</a>.]]></field_group_comment>
                <name>slides_order</name>
                <label>Order of content</label>
                <type>slides_order</type>
                <type_class>\Sirv\Magento2\Block\Adminhtml\Settings\Edit\Form\Element\SlidesOrder</type_class>
                <options>
                    <option>
                        <!--
                        <label>Zoom</label>
                        -->
                        <label>Image</label>
                        <value>zoom</value>
                    </option>
                    <option>
                        <label>Spin</label>
                        <value>spin</value>
                    </option>
                    <option>
                        <label>Video</label>
                        <value>video</value>
                    </option>
                    <option>
                        <label>Model</label>
                        <value>model</value>
                    </option>
                    <!--
                    <option>
                        <label>Image</label>
                        <value>image</value>
                    </option>
                    -->
                </options>
                <value></value>
            </field>
            <field>
                <name>viewer_contents</name>
                <label>Order of remaining content</label>
                <type>radios</type>
                <type_class>\Sirv\Magento2\Block\Adminhtml\Settings\Edit\Form\Element\Radios\OrderOfContent</type_class>
                <options>
                    <option>
                        <label>Sirv assets, then Magento images &amp; videos</label>
                        <value>3</value>
                    </option>
                    <option>
                        <label>Magento images &amp; videos, then Sirv assets</label>
                        <value>2</value>
                    </option>
                    <option>
                        <label>Magento images &amp; videos</label>
                        <value>1</value>
                    </option>
                    <option>
                        <label>Sirv assets</label>
                        <value>4</value>
                    </option>
                </options>
                <value>3</value>
                <install/>
            </field>
            <field>
                <field_group_separator/>
                <name>pinned_items</name>
                <label>Pin gallery items</label>
                <type>pinned_items</type>
                <type_class>\Sirv\Magento2\Block\Adminhtml\Settings\Edit\Form\Element\PinnedItems</type_class>
                <value>{"videos":"no","spins":"no","models":"no","images":"no","mask":""}</value>
                <install/>
            </field>
            <field>
                <field_group_legend>Gallery experience</field_group_legend>
                <name>smv_layout</name>
                <label>Layout</label>
                <type>radios</type>
                <type_class>\Sirv\Magento2\Block\Adminhtml\Settings\Edit\Form\Element\Radios\Buttons</type_class>
                <options>
                    <option>
                        <label>Slider</label>
                        <value>slider</value>
                    </option>
                    <option>
                        <label>1 column</label>
                        <value>grid_columns_1</value>
                    </option>
                    <option>
                        <label>2 columns</label>
                        <value>grid_columns_2</value>
                    </option>
                    <option>
                        <label>3 columns</label>
                        <value>grid_columns_3</value>
                    </option>
                    <option>
                        <label>1 then 2</label>
                        <value>grid_columns_1_2</value>
                    </option>
                    <option>
                        <label>1 then 3</label>
                        <value>grid_columns_1_3</value>
                    </option>
                </options>
                <value>slider</value>
