            <field>
                <name>smv_grid_gap</name>
                <label>Spacing between items in the grid</label>
                <type>text</type>
                <type_class>\Sirv\Magento2\Block\Adminhtml\Settings\Edit\Form\Element\Text</type_class>
                <value>20</value>
            </field>
            <field>
                <name>smv_aspect_ratio</name>
                <label>Aspect ratio of item(s)</label>
                <type>radios</type>
                <type_class>\Sirv\Magento2\Block\Adminhtml\Settings\Edit\Form\Element\Radios\Buttons</type_class>
                <options>
                    <option>
                        <label>Auto</label>
                        <value>auto</value>
                    </option>
                    <option>
                        <label>1/1</label>
                        <value>1/1</value>
                    </option>
                    <option>
                        <label>4/3</label>
                        <value>4/3</value>
                    </option>
                    <option>
                        <label>16/9</label>
                        <value>16/9</value>
                    </option>
                    <option>
                        <label>3/4</label>
